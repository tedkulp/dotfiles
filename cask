#!/usr/bin/env bash

brew_path=$(which brew)
if [ -x "$brew_path" ] ; then
  echo "Install/Updating Homebrew Packages"
  echo ""

  brew tap phinze/homebrew-cask
  brew install brew-cask

  function installcask() {
    brew cask install "${@}"
  }

  installcask adobe-creative-cloud
  installcask airfoil
  installcask alfred
  installcask asepsis
  installcask atom
  installcask crashplan
  installcask dropbox
  installcask evernote
  installcask gitx-rowanj
  installcask google-chrome
  installcask handbrake
  installcask hipchat
  installcask intellij-idea-ce
  installcask iterm2
  installcask istat-menus
  installcask java
  installcask libreoffice
  installcask makemkv
  installcask rdio
  installcask sidestep
  installcask skitch
  installcask skype
  installcask slack
  installcask sourcetree
  installcask steam
  installcask sublime-text
  installcask teamviewer
  installcask vagrant
  installcask virtualbox
else
  echo "Install Homebrew first. Run ~/dotfiles/brew first."
  echo ""
fi
